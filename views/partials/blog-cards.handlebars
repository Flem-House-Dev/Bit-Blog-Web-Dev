<div class="card mb-3 shadow">
  <div class="card-body">
    <div class="d-flex justify-content-between align-items-start">
      <a class="text-decoration-none" href="/blog/{{id}}">
        <h3 class="card-title">{{title}}</h3>
      </a>
      <small> {{format_date post_date}} at {{format_time post_date}}</small>
    </div>

    <p class="card-text">{{truncate content 100}}</p>
    <div class="callout">

      <p>Author: {{author.username}}</p>

    </div>
  </div>
</div>